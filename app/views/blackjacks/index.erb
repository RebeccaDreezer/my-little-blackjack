<div class="welcome">
  <div class="title">
    <h1>My Little Blackjack</h1>
  </div>

  <div class="game_content">
    <table>
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Results</th>
        <th>Actions</th>
      </tr>
      <% @blackjacks.each do |blackjack| %>
        <tr>
          <td><%= blackjack.id %></td>
          <td><%= blackjack.created_at.strftime("%A, %B %d, %Y") %></td>
          <td><%= BlackjackHelper.display_state(blackjack.game_state) %></td>
          <td>
            <% if blackjack.game_state == Blackjack::STATE_ACTIVE %>
              <%= form_tag blackjack_url(blackjack.id) do %>
                <p class="button"><%= submit_tag "KEEP PLAYING!" %></p>
              <% end %>
            <% else %>
              None Available
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
